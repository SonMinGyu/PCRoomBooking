<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AdminAddPCRoomDetailActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10">

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/activity_admin_add_pcroom_detail_pcroomName"
            android:gravity="center"
            android:layout_weight="3"
            android:textSize="20dp"
            android:text="6층 PC실"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="15dp"
                android:gravity="center"
                android:text="남은 PC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/activity_admin_add_pcroom_detail_restPC"
                android:textSize="20dp"
                android:gravity="center"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="15dp"
                android:gravity="center"
                android:text="남은 노트북"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/activity_admin_add_pcroom_detail_restNotebook"
                android:textSize="20dp"
                android:gravity="center"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/activity_admin_add_pcroom_detail_save_button"
            android:text="저장"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:layout_weight="9"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_gravity="center"
            android:id="@+id/activity_admin_add_pcroom_detail_horizontal_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </ScrollView>

</LinearLayout>