<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/detail_activity_PCRoomName"
        android:textSize="25dp"
        android:gravity="center"
        android:text="208관 6층 PC실"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:id="@+id/detail_activity_noti_linearLayout"
        android:background="#c0c0c0"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/detail_activity_notiTitle"
            android:padding="5dp"
            android:gravity="center"
            android:text="PC실 사용 수업"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_activity_notiText"
            android:gravity="center"
            android:textSize="18dp"
            android:text="(15:00 ~ 17:00) OOO 교수님 알고리즘"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/detail_activity_tableLayout"
        android:background="#237f30"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>