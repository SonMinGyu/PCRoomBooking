<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/register_activity_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@null"
        android:hint="학교 Email"
        android:padding="5dp"
        android:textSize="20dp" />

    <LinearLayout
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/register_activity_univAuth_button"
            android:layout_gravity="center_vertical"
            android:text="학교 이메일 인증"
            android:textSize="16dp"
            android:layout_width="160dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp" >

        <EditText
            android:layout_marginRight="20dp"
            android:id="@+id/register_activity_textAuth"
            android:textSize="16dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:hint="인증 문자열 입력"
            android:background="@null"
            android:layout_width="140dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/register_activity_textAuth_button"
            android:text="인증"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/register_activity_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:hint="Password"
        android:padding="5dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/register_activity_passwordConfirm"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:hint="Password 확인"
        android:padding="5dp"
        android:textSize="20dp" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content" >

        <Spinner
            android:layout_marginRight="50dp"
            android:id="@+id/register_activity_major_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/register_activity_admissionNumber_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/register_activity_register_button"
        android:padding="3dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="회원가입"
        android:layout_width="150dp"
        android:layout_height="50dp" />


</LinearLayout>