<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/item_pcroom_pcroomName_text"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6층 PC실"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="사용가능"
            android:textSize="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/item_pcroom_pcroomBuilding_text"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="위치: 208관"
            android:textSize="20dp"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:weightSum="5"
            android:layout_height="match_parent" >

            <TextView
                android:background="@color/teal_200"
                android:textSize="20dp"
                android:text="PC"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/item_pcroom_pcSeat_text"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="10/6"
                android:textSize="25dp"
                android:paddingLeft="15dp"
                android:gravity="left|center" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="5"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="노트북"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@color/teal_200" />

            <TextView
                android:id="@+id/item_pcroom_notebookSeat_text"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="10/4"
                android:textSize="25dp"
                android:gravity="left|center"
                android:paddingLeft="15dp"/>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pcroom_nextClassNoti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="예정 수업 없음"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>