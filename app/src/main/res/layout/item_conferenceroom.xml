<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@color/purple_200">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/item_conferenceroom_croomName_text"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="팀플실 1"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/item_conferenceroom_bookEnableText"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="예약가능"
            android:textSize="16dp"
            android:gravity="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:weightSum="6"
            android:layout_height="match_parent" >

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="건물:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/item_conferenceroom_croomBuilding_text"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:text="208관"
                android:textSize="20dp"
                android:gravity="left|center"/>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:weightSum="10"
            android:layout_height="match_parent" >

            <TextView
                android:background="@color/teal_200"
                android:textSize="20dp"
                android:text="정원:"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/item_conferenceroom_limit_text"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6명"
                android:textSize="25dp"
                android:paddingLeft="15dp"
                android:gravity="left|center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:weightSum="6"
            android:layout_height="match_parent" >

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="위치:"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/item_conferenceroom_croomLocation_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:text="6층 PC실"
                android:textSize="20dp" />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_conferenceroom_nextClassNoti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="예정 수업 없음"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>