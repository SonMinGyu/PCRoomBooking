<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <TextView
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="제목"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_activity_app_title" />

    <EditText
        android:id="@+id/login_activity_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:inputType="textEmailAddress"
        android:background="@null"
        android:hint="Email"
        android:padding="5dp"
        android:textSize="20dp" />

    <EditText
        android:padding="5dp"
        android:id="@+id/login_activity_password"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:background="@null"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp" >

        <CheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/login_activity_emailSave_checkBox"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:padding="3dp"
            android:text="Email 저장"
            android:layout_width="130dp"
            android:layout_height="40dp" />

        <CheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/login_activity_autoLogin_checkBox"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:textSize="15dp"
            android:text="자동로그인"
            android:layout_width="130dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <Button
        android:id="@+id/login_activity_login_button"
        android:padding="3dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="로그인"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/login_activity_register_button"
        android:padding="3dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="회원가입"
        android:layout_width="150dp"
        android:layout_height="50dp" />

</LinearLayout>